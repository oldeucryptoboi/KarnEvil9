    "@karnevil9/journal": "workspace:^",
    "@karnevil9/kernel": "workspace:^",
    "@karnevil9/memory": "workspace:^",
    "@karnevil9/metrics": "workspace:^",
    "@karnevil9/permissions": "workspace:^",
    "@karnevil9/planner": "workspace:^",
    "@karnevil9/plugins": "workspace:^",
    "@karnevil9/scheduler": "workspace:^",
    "@karnevil9/schemas": "workspace:^",
