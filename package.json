{
  "name": "karnevil9",
  "version": "0.1.0",
  "description": "Deterministic agent runtime with explicit plans, typed tools, permissions, and replay. Implements Google DeepMind's Intelligent AI Delegation framework.",
  "keywords": [
    "ai-agents",
    "llm",
    "agent-framework",
    "deterministic-execution",
    "ai-safety",
    "multi-agent-systems",
    "typescript",
    "deepmind",
    "ai-delegation",
    "text-adventure",
    "interactive-fiction",
    "agent-runtime",
    "permissions",
    "replay",
    "audit-trail"
  ],
  "license": "MIT",
  "author": "Laurent DeSegur (https://twitter.com/oldeucryptoboi)",
  "homepage": "https://oldeucryptoboi.github.io/KarnEvil9",
  "repository": {
    "type": "git",
    "url": "https://github.com/oldeucryptoboi/KarnEvil9.git"
  },
  "bugs": {
    "url": "https://github.com/oldeucryptoboi/KarnEvil9/issues"
  },
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r --filter=!@karnevil9/dashboard test -- --coverage",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "clean": "pnpm -r clean",
    "dev": "pnpm -r --parallel dev",
    "lint": "biome lint packages/*/src",
    "prepare": "husky"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.39",
