    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright": "^1.58.2",
    "qrcode-terminal": "^0.12.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "uuid": "^11.0.0",
    "vitest": "^3.0.0",
    "ws": "^8.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
